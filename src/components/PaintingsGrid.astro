    {src: favorites, class: "my-painting pic-a", alt: "oil painting"},
    {src: orangeBlue, class: "my-painting pic-b", alt: "oil painting"},
    {src: treads, class: "my-painting pic-c", alt: "oil painting"},
    {src: noLaces3pink, class: "my-painting pic-d", alt: "oil painting"},
    {src: noLaces2, class: "my-painting pic-e", alt: "oil painting"},
    {src: noLaces1, class: "my-painting pic-f", alt: "oil painting"},
    {src: purple, class: "my-painting pic-g", alt: "oil painting"},
];
---

<section class="paintings layout-a">
    {paintings.map((e, index) => (
        // <div class={e.class}>
            <Image 
            src={e.src}
            alt={e.alt}
            class={e.class}
            widths={[400, 800, 1600]}
            formats={["webp", "png"]}
            sizes="(max-width: 600px) 100vw, (max-width: 1024px) 50vw, 25vw"
            loading={index < 4 ? "eager" : "lazy"}
            />
        // </div>
    ))}
</section>
