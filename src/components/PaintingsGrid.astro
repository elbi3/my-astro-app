import noLaces1 from "../assets/paintings/no-laces-horizontal.png";
import noLaces2 from "../assets/paintings/no-laces-left-right.png";
import noLaces3pink from "../assets/paintings/no-laces-vertical.png";
import orangeBlue from "../assets/paintings/orange-and-blue-shoes.png";
//pre-define "alt" text outside of array of objects?
