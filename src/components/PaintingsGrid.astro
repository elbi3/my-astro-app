<!-- Art Grid Styling  -->
<style>
    /* grid container */
    .paintings {
        display: grid;
        gap: .3rem;
        max-width: 60vw;
        max-height: 60vh;
        grid-template-columns: repeat(6, 1fr);
        grid-template-rows: repeat(6, 1fr);
        aspect-ratio: 1 / 1;
    }

    .paintings.layout-a {
        grid-template-areas: 
            "a a a c c c"
            "a a a b b e"
            "a a a b b e"
            "f f d b b e"
            "f f d g g g"
            "f f d g g g"
    }
    /* grid items */
    .my-painting {
        display: block; 
        /* ^picture defaults to inline */
        width: 100%;
        height: 100%;
        /* ^aspect-ratio goes on the grid item, not on the image itself: sizing grid items, not item's contents */
    }
    

    /* img (child of picture) */
    img {
        display: block;
        width: 100%;
        height: 100%;
        object-fit: cover;
        /* ^preserves aspect ratio and crops instead of squishing */
        
    }

    .pic-a {
        grid-area: a;
    }
    .pic-b {
        grid-area: b;
    }
    
    .pic-c {
        grid-area: c;
    }
  
    .pic-d {
        grid-area: d;
        object-position: bottom left;
    }

    .pic-e {
        grid-area: e;
    }

    .pic-f {
        grid-area: f;
    }
    .pic-f img {
        object-position: top right;
    }
    .pic-g {
        grid-area: g;
    }
