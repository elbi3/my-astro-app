---
//environment and facts, including weather and time, other global attributes
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import WeatherNav from "../components/WeatherNav.astro";
---

<!doctype html>
<html lang="en" data-weather="rain">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro Basics</title>
	</head>
	<body>
		<Header />
		<WeatherNav />
		<slot />
		<Footer />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		/* display: flex;
		flex-direction: column; */
		display: grid;
		grid-template-rows: 
			auto
			auto
			1fr
			auto;
	}
</style>
