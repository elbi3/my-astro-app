---
//---use layout for orchestration, not logic---
//---components
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
// import WeatherNav from "../components/WeatherNav.astro";
import { Icon } from "astro-icon/components";
//---weather api logic
import { fetchWeather } from "../lib/weather/index.ts";

const weatherTS = await fetchWeather();
console.log("weatherTS: ", weatherTS);
// import { openWeatherFetch } from "../lib/weatherAPI.server.js";
// let fetchedWeather = await openWeatherFetch();

//---environment and facts, including weather and time, other global attributes---
import sunlightCalc from "../lib/sunlightCalc.js";
import weatherCalc from "../lib/weatherCalc.js";

let dayTime = sunlightCalc(weatherTS.sunrise, weatherTS.sunset);
let dayPhase = dayTime ? dayTime : "afternoon";

let currentWeather = weatherCalc(weatherTS.weatherType);
// console.log("currentWeather: ", currentWeather);
let weather = currentWeather ? currentWeather : "clear";

const WEATHER_ICONS = {
	clear: "mdi:weather-sunny",
	cloudy: "mdi:weather-cloudy",
	wet: "mdi:weather-rainy",
	storm: "mdi:weather-lightning",
	snow: "mdi:weather-snowy",
	fog: "mdi:weather-fog",
};

let myIcon = WEATHER_ICONS[weather];

//--dev-data-------------------------
let mockData =  {
  weatherType: 'clouds',
  weatherDesc: 'few clouds',
  weatherIcon: '02d',
  temp: { k: 276, c: 3, f: 38 },
  tempFeelsLike: { k: 274, c: 1, f: 34 },
  weatherHumidity: 70,
  visibility: 10000,
  wind: 2.06,
  clouds: 20,
  sunrise: 1769269494,
  sunset: 1769302652,
}

---

<!doctype html>
<html lang="en" data-weather={weather} data-time={dayPhase}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Plant Kennel</title>
	</head>
	<body>
		<pre>{JSON.stringify(weather, null, 2)}</pre>
		<Header />
		<nav>
			<ul>
				<li>
					<a href="/about">about</a>
				</li>
				<li>
					<p>time calc: {dayPhase}</p>
					<p>weather calc: {weather}</p>
				</li>
				<li>
					<Icon name="mdi:weather-night-partly-cloudy" class="nav-weather-icon" />
				</li>
				<li>
					<Icon name={myIcon} class="nav-weather-icon" />
				</li>
			</ul>
		</nav>
		<!-- <WeatherNav time={dayPhase} weather={weather} icon={myIcon} /> -->
			<slot />
		<Footer />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		/* display: flex;
		flex-direction: column; */
		display: grid;
		grid-template-rows: 
			auto
			auto
			1fr
			auto;
	}
</style>
