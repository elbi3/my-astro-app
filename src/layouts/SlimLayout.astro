---
export const prerender = true; //static
// import Header from "../components/Header.astro";
import SlimHeader from "../components/SlimHeader.astro";
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="en" data-weather="rain">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Plant Kennel: HTML Colors</title>
	</head>
	<body>
		<SlimHeader title="Plant Kennel" subtitle="140 HTML Color Names (Supported By All Browsers)"/>
		<slot />
		<Footer />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		/* display: flex;
		flex-direction: column; */
		display: grid;
		grid-template-rows: 
			auto
			1fr
			auto;
	}
</style>
